rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // All user accounts live in the "users" collection
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Farmers Listings: only allow users with role == 'farmer' to access their own listings
    match /farmers_listings/{listingId} {
      allow create: if request.auth != null &&
                    request.resource.data.userId == request.auth.uid &&
                    get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "farmer";

      allow read, update, delete: if request.auth != null &&
                                  resource.data.userId == request.auth.uid &&
                                  get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "farmer";
    }

    // Offers (if needed by both roles)
    match /offers/{offerId} {
      allow read, write: if request.auth != null &&
                         resource.data.userId == request.auth.uid;
    }

    // Add additional rules as needed...

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
